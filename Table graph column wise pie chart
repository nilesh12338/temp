  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    .pie-chart-wrapper canvas {
      max-height: 250px;
      max-width: 250px;
      margin-right: 20px;
    }
  </style>
