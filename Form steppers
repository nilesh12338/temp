<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Step Form Wizard with Validation (Fixed)</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
  <style>
    .step {
      position: absolute;
      width: 100%;
      opacity: 0;
      transform: translateX(100%);
      transition: all 0.5s ease;
    }
    .step.active {
      opacity: 1;
      transform: translateX(0);
      position: relative;
    }
    .step.slide-out-left { transform: translateX(-100%); opacity: 0; }
    .step.slide-out-right { transform: translateX(100%); opacity: 0; }
    .form-container { position: relative; min-height: 300px; }
    label.error { color: #dc3545; font-size: 0.9em; margin-top: 4px; display: block; }
    #cityList { z-index: 10; }
  </style>
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">

<div class="card shadow-lg p-4" style="width:520px;">
  <h4 class="mb-3">Survey Form</h4>

  <!-- Progress bar -->
  <div class="progress mb-3" style="height: 20px;">
    <div id="progressBar" class="progress-bar bg-primary" role="progressbar" style="width: 20%;">Step 1 of 5</div>
  </div>

  <form id="surveyForm" novalidate>
    <div class="form-container">

      <!-- Step 1 -->
      <div class="step active" id="step1">
        <label class="form-label">1. Choose your gender</label>
        <div id="genderGroup">
          <div class="form-check">
            <input type="radio" name="gender" value="Male" class="form-check-input"> <label class="form-check-label">Male</label>
          </div>
          <div class="form-check">
            <input type="radio" name="gender" value="Female" class="form-check-input"> <label class="form-check-label">Female</label>
          </div>
        </div>
      </div>

      <!-- Step 2 -->
      <div class="step" id="step2">
        <label class="form-label">2. Enter your city (autocomplete)</label>
        <input type="text" id="city" name="city" class="form-control" placeholder="Start typing city...">
        <div id="cityList" class="list-group position-absolute w-100"></div>
      </div>

      <!-- Step 3 -->
      <div class="step" id="step3">
        <label class="form-label">3. Enter monthly income (amount)</label>
        <input type="number" id="income" name="income" class="form-control" placeholder="Enter amount">
      </div>

      <!-- Step 4 -->
      <div class="step" id="step4">
        <label class="form-label">4. Choose your qualification</label>
        <select id="qualification" name="qualification" class="form-select">
          <option value="">-- Select --</option>
          <option value="Graduate">Graduate</option>
          <option value="Post Graduate">Post Graduate</option>
          <option value="Doctorate">Doctorate</option>
        </select>

        <!-- Sub questions for Graduate -->
        <div id="subQuestions" class="mt-3" style="display:none;">
          <label class="form-label">4(a). College Name</label>
          <input type="text" id="collegeName" name="collegeName" class="form-control">

          <label class="form-label mt-2">4(b). Year of Passout</label>
          <input type="number" id="passoutYear" name="passoutYear" class="form-control" placeholder="YYYY">
        </div>
      </div>

      <!-- Step 5 -->
      <div class="step" id="step5">
        <label class="form-label">5. Do you agree with terms?</label>
        <div id="termsGroup">
          <div class="form-check">
            <input type="radio" name="terms" value="Yes" class="form-check-input"> <label class="form-check-label">Yes</label>
          </div>
          <div class="form-check">
            <input type="radio" name="terms" value="No" class="form-check-input"> <label class="form-check-label">No</label>
          </div>
        </div>
      </div>

      <!-- Final "Congratulations" slide (shown after submit) -->
      <div class="step" id="step6">
        <div class="text-center p-4">
          <h3 class="text-success">ðŸŽ‰ Congratulations!</h3>
          <p>You have successfully completed the form.</p>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="d-flex justify-content-between mt-4">
      <button type="button" class="btn btn-secondary" id="prevBtn" disabled>Back</button>
      <button type="button" class="btn btn-primary" id="nextBtn">Next</button>
    </div>
  </form>
</div>

<script>
$(function(){
  let currentStep = 1;
  const totalSteps = 5;

  // jQuery Validation â€“ IMPORTANT: ignore non-active steps
  const validator = $("#surveyForm").validate({
    ignore: ".step:not(.active) :input, :hidden",
    rules: {
      gender: { required: true },
      city: { required: true },
      income: { required: true, number: true, min: 1 },
      qualification: { required: true },
      terms: { required: true },
      collegeName: {
        required: function(){ return $("#qualification").val() === "Graduate"; }
      },
      passoutYear: {
        required: function(){ return $("#qualification").val() === "Graduate"; },
        digits: true,
        minlength: 4,
        maxlength: 4,
        range: [1950, 2099]
      }
    },
    messages: {
      gender: "Please select gender",
      city: "Please enter city",
      income: "Enter a valid amount",
      qualification: "Select your qualification",
      terms: "Please choose an option",
      collegeName: "Please enter college name",
      passoutYear: "Enter a valid year (YYYY)"
    },
    errorPlacement: function(error, element){
      if(element.attr("name") === "gender"){
        error.insertAfter($("#genderGroup"));
      } else if(element.attr("name") === "terms"){
        error.insertAfter($("#termsGroup"));
      } else {
        error.insertAfter(element);
      }
    }
  });

  function updateProgress() {
    const percent = (currentStep / totalSteps) * 100;
    $("#progressBar").css("width", percent + "%");
    $("#progressBar").text(
      currentStep < totalSteps ? ("Step " + currentStep + " of " + totalSteps)
                               : ("Step " + currentStep + " of " + totalSteps + " â€“ Complete âœ…")
    );
  }

  function showStep(newStep, direction) {
    const $current = $("#step" + currentStep);
    const $next = $("#step" + newStep);

    if(direction === "forward"){
      $current.removeClass("active").addClass("slide-out-left");
    } else {
      $current.removeClass("active").addClass("slide-out-right");
    }
    setTimeout(() => { $current.removeClass("slide-out-left slide-out-right"); }, 500);

    $next.addClass("active");
    updateProgress();
  }

  $("#nextBtn").on("click", function(){
    // validate only visible (active) step because ignore is configured
    if(!$("#surveyForm").valid()){
      return;
    }

    if(currentStep < totalSteps){
      currentStep++;
      showStep(currentStep, "forward");
    } else {
      // Final submit â†’ show congratulations slide and mark progress complete
      console.log("Form Data:", $("#surveyForm").serializeArray());
      $("#step" + currentStep).removeClass("active");
      $("#step6").addClass("active");
      $("#progressBar").css("width", "100%").text("Step 5 of 5 â€“ Complete âœ…");
      $("#nextBtn, #prevBtn").prop("disabled", true).addClass("disabled");
    }

    $("#prevBtn").prop("disabled", currentStep === 1);
    $(this).text(currentStep === totalSteps ? "Submit" : "Next");
  });

  $("#prevBtn").on("click", function(){
    if(currentStep > 1){
      currentStep--;
      showStep(currentStep, "backward");
    }
    $("#prevBtn").prop("disabled", currentStep === 1);
    $("#nextBtn").text("Next");
  });

  // Qualification sub-questions toggle
  $("#qualification").on("change", function(){
    if($(this).val()){
      $("#subQuestions").slideDown();
      // no need to toggle 'required' attributes; rules already handle it
    } else {
      $("#subQuestions").slideUp();
      $("#collegeName, #passoutYear").val("");
    }
  });

  // Dummy autocomplete cities
  const cities = ["Mumbai","Delhi","Bangalore","Pune","Chennai","Kolkata"];
  $("#city").on("input", function(){
    const val = $(this).val().toLowerCase();
    const matches = cities.filter(c => c.toLowerCase().includes(val));
    $("#cityList").empty();
    if(val){
      matches.forEach(c => {
        $("#cityList").append(`<a href="#" class="list-group-item list-group-item-action">${c}</a>`);
      });
    }
  });
  $(document).on("click", "#cityList a", function(e){
    e.preventDefault();
    $("#city").val($(this).text());
    $("#cityList").empty();
  });
});
</script>

</body>
</html>
