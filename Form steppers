<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Step Form Wizard with Progress Bar</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    .step {
      position: absolute;
      width: 100%;
      opacity: 0;
      transform: translateX(100%);
      transition: all 0.5s ease;
    }
    .step.active {
      opacity: 1;
      transform: translateX(0);
      position: relative;
    }
    .step.slide-out-left { transform: translateX(-100%); opacity: 0; }
    .step.slide-out-right { transform: translateX(100%); opacity: 0; }
    .form-container { position: relative; min-height: 220px; }
    #cityList { z-index: 10; }
  </style>
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">

<div class="card shadow-lg p-4" style="width:500px;">
  <h4 class="mb-3">Survey Form</h4>

  <!-- Progress bar -->
  <div class="progress mb-3" style="height: 20px;">
    <div id="progressBar" class="progress-bar bg-primary" role="progressbar" style="width: 20%;">
      Step 1 of 5
    </div>
  </div>

  <form id="surveyForm">
    <div class="form-container">

      <!-- Step 1 -->
      <div class="step active" id="step1">
        <label class="form-label">1. Choose your gender</label><br>
        <div class="form-check">
          <input type="radio" name="gender" value="Male" class="form-check-input"> Male
        </div>
        <div class="form-check">
          <input type="radio" name="gender" value="Female" class="form-check-input"> Female
        </div>
      </div>

      <!-- Step 2 -->
      <div class="step" id="step2">
        <label class="form-label">2. Enter your city (autocomplete)</label>
        <input type="text" id="city" name="city" class="form-control" placeholder="Start typing city...">
        <div id="cityList" class="list-group position-absolute w-100"></div>
      </div>

      <!-- Step 3 -->
      <div class="step" id="step3">
        <label class="form-label">3. Enter monthly income (amount)</label>
        <input type="number" id="income" name="income" class="form-control" placeholder="Enter amount">
      </div>

      <!-- Step 4 -->
      <div class="step" id="step4">
        <label class="form-label">4. Choose your qualification</label>
        <select id="qualification" name="qualification" class="form-select">
          <option value="">-- Select --</option>
          <option>Graduate</option>
          <option>Post Graduate</option>
          <option>Doctorate</option>
        </select>
      </div>

      <!-- Step 5 -->
      <div class="step" id="step5">
        <label class="form-label">5. Do you agree with terms?</label><br>
        <div class="form-check">
          <input type="radio" name="terms" value="Yes" class="form-check-input"> Yes
        </div>
        <div class="form-check">
          <input type="radio" name="terms" value="No" class="form-check-input"> No
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="d-flex justify-content-between mt-4">
      <button type="button" class="btn btn-secondary" id="prevBtn" disabled>Back</button>
      <button type="button" class="btn btn-primary" id="nextBtn">Next</button>
    </div>
  </form>
</div>

<script>
$(function(){
  let currentStep = 1;
  const totalSteps = 5;

  function validateStep(step) {
    switch(step){
      case 1: return $("input[name='gender']:checked").length > 0;
      case 2: return $("#city").val().trim() !== "";
      case 3: return $("#income").val().trim() !== "" && Number($("#income").val()) > 0;
      case 4: return $("#qualification").val().trim() !== "";
      case 5: return $("input[name='terms']:checked").length > 0;
    }
    return false;
  }

  function updateProgress() {
    const percent = (currentStep / totalSteps) * 100;
    $("#progressBar").css("width", percent + "%");
    $("#progressBar").text("Step " + currentStep + " of " + totalSteps);
  }

  function showStep(newStep, direction) {
    const $current = $("#step" + currentStep);
    const $next = $("#step" + newStep);

    if(direction === "forward"){
      $current.removeClass("active").addClass("slide-out-left");
    } else {
      $current.removeClass("active").addClass("slide-out-right");
    }

    setTimeout(() => {
      $current.removeClass("slide-out-left slide-out-right");
    }, 500);

    $next.addClass("active");
    updateProgress();
  }

  $("#nextBtn").click(function(){
    if(!validateStep(currentStep)){
      alert("Please fill this question before moving ahead!");
      return;
    }
    if(currentStep < totalSteps){
      let newStep = currentStep + 1;
      showStep(newStep, "forward");
      currentStep = newStep;
    } else {
      // Final submit
      $("#surveyForm").submit();
      return;
    }
    $("#prevBtn").prop("disabled", currentStep === 1);
    $(this).text(currentStep === totalSteps ? "Submit" : "Next");
  });

  $("#prevBtn").click(function(){
    if(currentStep > 1){
      let newStep = currentStep - 1;
      showStep(newStep, "backward");
      currentStep = newStep;
    }
    $("#prevBtn").prop("disabled", currentStep === 1);
    $("#nextBtn").text("Next");
  });

  // Form submit handler
  $("#surveyForm").on("submit", function(e){
    e.preventDefault();
    let formData = $(this).serializeArray();
    console.log("Form Data:", formData);
    alert("Form submitted successfully! Check console for data.");
  });

  // Dummy autocomplete cities
  const cities = ["Mumbai","Delhi","Bangalore","Pune","Chennai","Kolkata"];
  $("#city").on("input", function(){
    let val = $(this).val().toLowerCase();
    let matches = cities.filter(c => c.toLowerCase().includes(val));
    $("#cityList").empty();
    if(val){
      matches.forEach(c => {
        $("#cityList").append(`<a href="#" class="list-group-item list-group-item-action">${c}</a>`);
      });
    }
  });

  $(document).on("click", "#cityList a", function(e){
    e.preventDefault();
    $("#city").val($(this).text());
    $("#cityList").empty();
  });

});
</script>

</body>
</html>
