<script>
$(function(){
  let currentStep = 1;
  const totalSteps = 5;

  // jQuery Validation
  $("#surveyForm").validate({ errorClass: "text-danger" });

  function updateProgress() {
    let percent = (currentStep / totalSteps) * 100;
    $("#progressBar").css("width", percent+"%").text("Step " + currentStep + " of " + totalSteps);
  }

  function showStep(newStep, direction) {
    const $current = $("#step" + currentStep);
    const $next = $("#step" + newStep);

    if(direction === "forward"){
      $current.removeClass("active").addClass("slide-out-left");
    } else {
      $current.removeClass("active").addClass("slide-out-right");
    }

    setTimeout(() => { $current.removeClass("slide-out-left slide-out-right"); }, 500);
    $next.addClass("active");
  }

  function handleNext(skip=false) {
    if(!skip && !$("#surveyForm").valid()) return;

    if(currentStep < totalSteps){
      let newStep = currentStep + 1;
      showStep(newStep, "forward");
      currentStep = newStep;
      updateProgress();
    } else {
      // Show summary
      $("#progressBar").css("width","100%").text("Completed");
      $("#summary").addClass("active");

      let data = $("#surveyForm").serializeArray();
      let html = "<ul class='list-group'>";
      data.forEach(d => { html += `<li class='list-group-item'><strong>${d.name}:</strong> ${d.value}</li>`; });
      html += "</ul>";
      $("#summaryContent").html(html);

      console.log("Form Data:", data);
      $("#nextBtn, #prevBtn, #skipBtn").hide();
    }
    $("#prevBtn").prop("disabled", currentStep === 1);
    $("#nextBtn").text(currentStep === totalSteps ? "Submit" : "Next");
  }

  $("#nextBtn").click(()=> handleNext(false));
  $("#skipBtn").click(()=> handleNext(true));
  $("#prevBtn").click(function(){
    if(currentStep > 1){
      let newStep = currentStep - 1;
      showStep(newStep, "backward");
      currentStep = newStep;
      updateProgress();
    }
    $("#prevBtn").prop("disabled", currentStep === 1);
    $("#nextBtn").text("Next");
  });

  // Autocomplete dummy
  const cities = ["Mumbai","Delhi","Bangalore","Pune","Chennai","Kolkata"];
  $("#city").on("input", function(){
    let val = $(this).val().toLowerCase();
    let matches = cities.filter(c => c.toLowerCase().includes(val));
    $("#cityList").empty();
    if(val){
      matches.forEach(c => $("#cityList").append(`<a href="#" class="list-group-item list-group-item-action">${c}</a>`));
    }
  });
  $(document).on("click", "#cityList a", function(e){
    e.preventDefault(); $("#city").val($(this).text()); $("#cityList").empty();
  });

  // Qualification sub-questions
  $("#qualification").change(function(){
    $("#graduateFields, #postGraduateFields").hide();
    if($(this).val() === "Graduate") $("#graduateFields").show();
    if($(this).val() === "Post Graduate") $("#postGraduateFields").show();
  });
});
</script>
</body>
</html>
