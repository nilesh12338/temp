<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Dynamic Dropdown from Existing Options</title>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

<!-- Radio Buttons -->
<div>
  <label><input type="radio" name="category" value="onhand" checked> Onhand</label>
  <label><input type="radio" name="category" value="submitted"> Submitted</label>
  <label><input type="radio" name="category" value="entire"> Entire Segment</label>
</div>

<!-- Dropdown with pre-defined options -->
<select id="segmentSelect">
  <option value="All">All</option>
  <option value="A1">A1</option>
  <option value="B1">B1</option>
  <option value="C1">C1</option>
</select>

<script>
$(document).ready(function() {

  // Create optionsSet1 dynamically from existing dropdown options
  const optionsSet1 = [];
  $('#segmentSelect option').each(function() {
    optionsSet1.push({
      value: $(this).val(),
      text: $(this).text()
    });
  });

  // Define optionsSet2 as fixed key-value pairs
  const optionsSet2 = [
    { value: 'All', text: 'All' },
    { value: 'A2', text: 'A2' },
    { value: 'B2', text: 'B2' },
    { value: 'C2', text: 'C2' }
  ];

  // Function to populate dropdown
  function populateDropdown(options) {
    const $dropdown = $('#segmentSelect');
    $dropdown.empty(); // Clear existing options
    options.forEach(opt => {
      $dropdown.append(`<option value="${opt.value}">${opt.text}</option>`);
    });
    $dropdown.val('All'); // Reset to All
  }

  // Handle radio button change
  $('input[name="category"]').change(function() {
    const selected = $(this).val();
    if (selected === 'entire') {
      populateDropdown(optionsSet2);
    } else {
      populateDropdown(optionsSet1);
    }
  });

});
</script>

</body>
</html>
