<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Survey Form Wizard with Skip</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
  <style>
    .step {
      position: absolute;
      width: 100%;
      opacity: 0;
      transform: translateX(100%);
      transition: all 0.5s ease;
    }
    .step.active {
      opacity: 1;
      transform: translateX(0);
      position: relative;
    }
    .step.slide-out-left { transform: translateX(-100%); opacity: 0; }
    .step.slide-out-right { transform: translateX(100%); opacity: 0; }
    .form-container { position: relative; min-height: 240px; }
    #cityList { z-index: 10; }
    .summary { display:none; }
  </style>
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">

<div class="card shadow-lg p-4" style="width:500px;">
  <h4 class="mb-3">Survey Form</h4>

  <form id="surveyForm">
    <div class="form-container">

      <!-- Step 1 -->
      <div class="step active" id="step1">
        <label class="form-label">1. Choose your gender</label><br>
        <div class="form-check">
          <input type="radio" name="gender" value="Male" class="form-check-input" required> Male
        </div>
        <div class="form-check">
          <input type="radio" name="gender" value="Female" class="form-check-input" required> Female
        </div>
      </div>

      <!-- Step 2 -->
      <div class="step" id="step2">
        <label class="form-label">2. Enter your city (autocomplete)</label>
        <input type="text" name="city" id="city" class="form-control" placeholder="Start typing city..." required>
        <div id="cityList" class="list-group position-absolute w-100"></div>
      </div>

      <!-- Step 3 -->
      <div class="step" id="step3">
        <label class="form-label">3. Enter monthly income (amount) <span class="text-muted">(Optional)</span></label>
        <input type="number" name="income" id="income" class="form-control" placeholder="Enter amount">
      </div>

      <!-- Step 4 -->
      <div class="step" id="step4">
        <label class="form-label">4. Choose your qualification <span class="text-muted">(Optional)</span></label>
        <select id="qualification" name="qualification" class="form-select">
          <option value="">-- Select --</option>
          <option>Graduate</option>
          <option>Post Graduate</option>
          <option>Doctorate</option>
        </select>

        <!-- Graduate extra questions -->
        <div id="gradFields" class="mt-3" style="display:none;">
          <label class="form-label">4(a). College Name</label>
          <input type="text" name="college" class="form-control">
          <label class="form-label mt-2">4(b). Year of Passout</label>
          <input type="number" name="passoutYear" class="form-control" min="1900" max="2099">
        </div>

        <!-- Post Graduate extra questions -->
        <div id="pgFields" class="mt-3" style="display:none;">
          <label class="form-label">4(a). Specialization</label>
          <input type="text" name="specialization" class="form-control">
          <label class="form-label mt-2">4(b). University</label>
          <input type="text" name="university" class="form-control">
        </div>
      </div>

      <!-- Step 5 -->
      <div class="step" id="step5">
        <label class="form-label">5. Do you agree with terms?</label><br>
        <div class="form-check">
          <input type="radio" name="terms" value="Yes" class="form-check-input" required> Yes
