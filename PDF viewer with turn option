<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>PDF Flipbook Viewer</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- PDF.js -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js"></script>

  <!-- Turn.js (Flipbook Animation) -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/turn.js/4.1.0/turn.min.js"></script>

  <style>
    #flipbook {
      width: 900px;
      height: 600px;
      margin: auto;
    }
    #loader {
      display: none;
      text-align: center;
      padding: 20px;
      font-size: 20px;
    }
    canvas {
      width: 100%;
      height: 100%;
    }
  </style>
</head>
<body class="bg-light p-4">

  <div class="container">
    <h2 class="mb-4">PDF Flipbook Viewer Demo</h2>

    <button class="btn btn-primary" onclick="openPdf('sample.pdf')">Open PDF Flipbook</button>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="pdfModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="pdfTitle">PDF Viewer</h5>
          <button class="btn btn-success btn-sm" id="downloadBtn" onclick="downloadFromMemory()">Download</button>
          <button class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div id="loader">Loading PDF...</div>
          <div id="flipbook"></div>
        </div>
      </div>
    </div>
  </div>

  <script>
    let pdfDataCache = null;
    let currentFileName = "";

    async function openPdf(fileName) {
      currentFileName = fileName;
      document.getElementById("pdfTitle").innerText = fileName;
      document.getElementById("loader").style.display = "block";

      // Open modal
      new bootstrap.Modal(document.getElementById('pdfModal')).show();

      if (!pdfDataCache) {
        const response = await fetch(fileName);
        pdfDataCache = await response.arrayBuffer();
      }

      loadPdfFlipbook(pdfDataCache);
    }

    async function loadPdfFlipbook(pdfData) {
      document.getElementById("flipbook").innerHTML = ""; // reset

      const pdf = await pdfjsLib.getDocument({ data: pdfData }).promise;
      const totalPages = pdf.numPages;

      const pagesHTML = [];

      for (let i = 1; i <= totalPages; i++) {
        const page = await pdf.getPage(i);
        const viewport = page.getViewport({ scale: 1.5 });

        let canvas = document.createElement("canvas");
        let context = canvas.getContext("2d");
        canvas.width = viewport.width;
        canvas.height = viewport.height;

        await page.render({ canvasContext: context, viewport: viewport }).promise;

        let pageDiv = document.createElement("div");
        pageDiv.className = "page";
        pageDiv.appendChild(canvas);

        pagesHTML.push(pageDiv);
      }

      const flipbook = document.getElementById("flipbook");
      pagesHTML.forEach(p => flipbook.appendChild(p));

      $("#flipbook").turn({
        width: 900,
        height: 600,
        autoCenter: true,
        elevation: 50,
        gradients: true,
        duration: 800
      });

      document.getElementById("loader").style.display = "none";
    }

    function downloadFromMemory() {
      if (!pdfDataCache) return;

      const blob = new Blob([pdfDataCache], { type: 'application/pdf' });
      const link = document.createElement('a');
      link.href = URL.createObjectURL(blob);
      link.download = currentFileName;
      link.click();
    }
  </script>
</body>
</html>
