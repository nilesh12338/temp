<body class="p-4">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4>DataTable Toggle View</h4>
      <button id="toggleView" class="btn btn-primary btn-sm">Switch to Card View</button>
    </div>

