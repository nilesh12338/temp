<script>
$(function(){
  let currentStep = 1;
  const totalSteps = 6;

  $("#surveyForm").validate({
    errorClass: "text-danger",
    errorPlacement: function(error, element){
      if(element.attr("type") === "radio"){
        error.insertAfter(element.closest("div.form-check").parent());
      } else {
        error.insertAfter(element);
      }
    }
  });

  function updateProgress() {
    $("#progressText").text("Step " + currentStep + " of " + totalSteps);
  }

  function showStep(newStep, direction){
    const $current = $("#step" + currentStep);
    const $next = $("#step" + newStep);

    if(direction === "forward"){
      $current.removeClass("active").addClass("slide-out-left");
    } else {
      $current.removeClass("active").addClass("slide-out-right");
    }
    setTimeout(() => { $current.removeClass("slide-out-left slide-out-right"); }, 500);

    $next.addClass("active");
    currentStep = newStep;
    updateProgress();

    $("#prevBtn").prop("disabled", currentStep === 1);
    $("#nextBtn").text(currentStep === totalSteps ? "Submit" : "Next");
  }

  $("#nextBtn").click(function(){
    if(currentStep < totalSteps){
      if(!$("#surveyForm").valid()) return;
      if(currentStep === totalSteps-1){
        // Before going to summary, build summary
        let data = $("#surveyForm").serializeArray();
        let html = "<ul class='list-group'>";
        data.forEach(item => {
          html += `<li class='list-group-item'><strong>${item.name}:</strong> ${item.value}</li>`;
        });
        html += "</ul>";
        $("#summaryData").html(html);
        $("#summary").show();
      }
      showStep(currentStep+1, "forward");
    } else {
      alert("Form submitted successfully!");
      console.log($("#surveyForm").serializeArray());
    }
  });

  $("#prevBtn").click(function(){
    if(currentStep > 1){
      showStep(currentStep-1, "backward");
    }
  });

  $("#skipBtn").click(function(){
    if(currentStep < totalSteps){
      showStep(currentStep+1, "forward");
    }
  });

  // Qualification conditional fields
  $("#qualification").change(function(){
    let val = $(this).val();
    $("#graduateFields, #postGraduateFields").hide();
    if(val === "Graduate") $("#graduateFields").show();
    if(val === "Post Graduate") $("#postGraduateFields").show();
  });

  // Dummy autocomplete cities
  const cities = ["Mumbai","Delhi","Bangalore","Pune","Chennai","Kolkata"];
  $("#city").on("input", function(){
    let val = $(this).val().toLowerCase();
    let matches = cities.filter(c => c.toLowerCase().includes(val));
    $("#cityList").empty();
    if(val){
      matches.forEach(c => {
        $("#cityList").append(`<a href="#" class="list-group-item list-group-item-action">${c}</a>`);
      });
    }
  });
  $(document).on("click", "#cityList a", function(e){
    e.preventDefault();
    $("#city").val($(this).text());
    $("#cityList").empty();
  });

  updateProgress();
});
</script>
</body>
</html>
