  <!-- Summary -->
  <div class="summary text-center">
    <h5 class="text-success">ðŸŽ‰ Congratulations!</h5>
    <p>Your responses have been recorded:</p>
    <pre id="formSummary" class="text-start bg-light p-3 rounded"></pre>
  </div>

  <!-- Navigation -->
  <div class="d-flex justify-content-between mt-4">
    <button class="btn btn-secondary" id="prevBtn" disabled>Back</button>
    <button class="btn btn-outline-warning d-none" id="skipBtn">Skip</button>
    <button class="btn btn-primary" id="nextBtn">Next</button>
  </div>
</div>

<script>
$(function(){
  let currentStep = 1;
  const totalSteps = 5;

  // jQuery Validation
  $("#surveyForm").validate({
    errorClass: "text-danger",
    ignore: [] // allow hidden fields to be validated when visible
  });

  function toggleSkipBtn() {
    if(currentStep === 3 || currentStep === 4){
      $("#skipBtn").removeClass("d-none");
    } else {
      $("#skipBtn").addClass("d-none");
    }
  }

  function showStep(newStep, direction) {
    const $current = $("#step" + currentStep);
    const $next = $("#step" + newStep);

    if(direction === "forward"){
      $current.removeClass("active").addClass("slide-out-left");
    } else {
      $current.removeClass("active").addClass("slide-out-right");
    }
    setTimeout(() => {
      $current.removeClass("slide-out-left slide-out-right");
    }, 500);

    $next.addClass("active");
    currentStep = newStep;
    $("#prevBtn").prop("disabled", currentStep === 1);
    $("#nextBtn").text(currentStep === totalSteps ? "Submit" : "Next");
    toggleSkipBtn();
  }

  $("#nextBtn").click(function(){
    if(currentStep === totalSteps){
      if(!$("#surveyForm").valid()){ return; }
      $(".form-container, #nextBtn, #prevBtn, #skipBtn").hide();
      $(".summary").show();
      $("#formSummary").text(JSON.stringify($("#surveyForm").serializeArray(), null, 2));
      return;
    }

    if(currentStep === 3 || currentStep === 4){
      // Optional: skip validation
      if(!$("#surveyForm").valid() && $("#surveyForm").find("#step"+currentStep+" :input[required]").length){
        return;
      }
    } else {
      if(!$("#surveyForm").valid()){ return; }
    }

    showStep(currentStep+1, "forward");
  });

  $("#prevBtn").click(function(){
    if(currentStep > 1){
      showStep(currentStep-1, "backward");
    }
  });

  $("#skipBtn").click(function(){
    showStep(currentStep+1, "forward");
  });

  // Qualification conditional fields
  $("#qualification").change(function(){
    $("#gradFields, #pgFields").hide().find(":input").prop("required", false);
    if($(this).val() === "Graduate"){
      $("#gradFields").show().find(":input").prop("required", true);
    } else if($(this).val() === "Post Graduate"){
      $("#pgFields").show().find(":input").prop("required", true);
    }
  });

  // Dummy autocomplete
  const cities = ["Mumbai","Delhi","Bangalore","Pune","Chennai","Kolkata"];
  $("#city").on("input", function(){
    let val = $(this).val().toLowerCase();
    let matches = cities.filter(c => c.toLowerCase().includes(val));
    $("#cityList").empty();
    if(val){
      matches.forEach(c => {
        $("#cityList").append(`<a href="#" class="list-group-item list-group-item-action">${c}</a>`);
      });
    }
  });
  $(document).on("click", "#cityList a", function(e){
    e.preventDefault();
    $("#city").val($(this).text());
    $("#cityList").empty();
  });

  toggleSkipBtn(); // initialize
});
</script>

</body>
</html>
