        <div id="cityList" class="list-group position-absolute w-100"></div>
      </div>

      <!-- Step 3 -->
      <div class="step" id="step3">
        <label class="form-label">3. Enter monthly income</label>
        <input type="number" name="income" id="income" class="form-control" placeholder="Enter amount" required min="1">
      </div>

      <!-- Step 4 -->
      <div class="step" id="step4">
