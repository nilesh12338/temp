  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
  <style>
    .step {
      position: absolute;
      width: 100%;
      opacity: 0;
      transform: translateX(100%);
      transition: all 0.5s ease;
    }
    .step.active {
      opacity: 1;
      transform: translateX(0);
      position: relative;
    }
    .step.slide-out-left { transform: translateX(-100%); opacity: 0; }
    .step.slide-out-right { transform: translateX(100%); opacity: 0; }
    .form-container { position: relative; min-height: 220px; overflow: hidden; }
    #cityList { z-index: 10; }
    #summary { display:none; }
  </style>
